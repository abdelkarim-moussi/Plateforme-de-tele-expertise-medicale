<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="medicexpert" transaction-type="RESOURCE_LOCAL">
        <class>com.example.medicexpert.entity.Staph</class>
        <class>com.example.medicexpert.entity.SpecialDoctor</class>
        <class>com.example.medicexpert.entity.GeneralDoctor</class>
        <class>com.example.medicexpert.entity.Patient</class>
        <class>com.example.medicexpert.entity.MedicalData</class>
        <class>com.example.medicexpert.entity.VitalSigns</class>
        <class>com.example.medicexpert.entity.Consultation</class>
        <class>com.example.medicexpert.entity.Speciality</class>
        <class>com.example.medicexpert.entity.ExpertiseRequest</class>
        <class>com.example.medicexpert.entity.TimeSlot</class>
        <class>com.example.medicexpert.entity.WaitingQueue</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/medicExpert"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="moussi@25"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>


</persistence>
